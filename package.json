{
    "name": "expense-tracker",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "dev": "concurrently \"pnpm:remix\" \"pnpm:scss-types\"",
        "generate": "prisma generate",
        "build": "pnpm generate && pnpm migrate:deploy && remix vite:build",
        "remix": "dotenvx run -- remix vite:dev",
        "lint:fix": "eslint --ext .ts,.tsx,.cjs,.js . --fix",
        "lint:stylelint": "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.cjs",
        "format": "prettier --write .",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "scss-types": "typed-scss-modules app --pattern '**/*.module.scss' --watch",
        "start": "remix-serve ./build/server/index.js",
        "typecheck": "tsc",
        "prepare": "husky",
        "migrate": "dotenvx run -- prisma migrate dev --name init",
        "migrate:deploy": "dotenvx run -- prisma migrate deploy",
        "reset": "dotenvx run -- prisma migrate reset"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.47.5",
        "@prisma/client": "^6.11.1",
        "@remix-run/node": "^2.16.8",
        "@remix-run/react": "^2.16.8",
        "@remix-run/serve": "^2.16.8",
        "bcryptjs": "^3.0.2",
        "clsx": "^2.1.1",
        "isbot": "^4.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.5.0",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@remix-run/dev": "latest",
        "@types/react": "latest",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "autoprefixer": "^10.4.19",
        "concurrently": "^9.2.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "postcss": "^8.4.38",
        "prettier": "^3.6.2",
        "prisma": "^6.11.1",
        "sass": "^1.89.2",
        "stylelint": "^16.21.1",
        "stylelint-config-recommended-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-value-no-unknown-custom-properties": "^6.0.1",
        "typed-scss-modules": "^8.1.1",
        "typescript": "^5.1.6",
        "vite": "^6.0.0",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
